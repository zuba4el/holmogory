@import "variables.styl"

body
	background lightgray
.wrapper {
  max-width 1200px
  margin 55px auto 0
  box-shadow shadow
  position relative
  @media (max-width 1200px){
    max-width 960px
    width 100%
  }
}
h1{
  font-size 30px
  color #fff
  font-family "GothamProRegular"
  @media (max-width 480px){
    font-size 24px
  }
}
h2{
  font-size 25px
  color blue
  font-family "GothamProMedium"
  @media (max-width 480px){
    font-size 18px
  }
}
h3{
  font-size 20px
  font-family "Roboto"
  text-transform uppercase
  @media (max-width 480px){
    font-size 15px
  }
}
a{
  font-size 14px
  color #fff
  font-family "GothamProRegular"
  text-decoration none
}
b{
  font-weight 600
}
p{
  color #fff  
  font-family 'Roboto'
  font-size 14px
  }
.content{
  margin-top 55px
}
.btn_more{
  background blue
  color #fff
  border-radius 5px
  border 0
  width 160px
  height 30px
  cursor pointer
  transition animation
  &:hover{
    background darkblue
  }
  &.mobile{
    width 80%
    text-align center
    margin 0 auto
    line-height 1.8
    text-decoration
      @media (max-width 480px){
        display block
      }
  }
  }
.pagginaton{ //TODO fix this paggination
  width 100%
  height 0
  padding 0 0 20px 0
  &_prew{
    width 35px
    height 35px
    background arrows
    background-position arrows-prew
    float left
    cursor pointer
    &:hover{
    background arrows
    background-position arrows-prew-hover
    }
    &__white{
      @extend .pagginaton_prew
      @extend .pagginaton_prew:hover
    }
    }
  &_next{
    width 35px
    height 35px
    background arrows
    background-position arrows-next
    float right
    cursor pointer
    &:hover{
    background arrows
    background-position arrows-next-hover
    }
    &__white{
      @extend .pagginaton_next
      @extend .pagginaton_next:hover
    }
    }
}
.studio{
  &::after{
    content '\00A9'
  }
}
.mobile{
  display none
}
