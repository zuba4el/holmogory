	font-size 24px
.wrapper_owl
	width 80%
	margin 0 auto
	position relative
	+media(768px)
		width 100%
	.item
		margin 20px
		+media(768px)
			margin 10px
	.owl-nav
		&.disabled
			display block
			+media(768px)
				display none
			.owl-prev
				position absolute
				left -50px
				bottom calc(50% - 17px)
				@extend .arrow-prew
			.owl-next
				position absolute
				right -50px
				bottom calc(50% - 17px)
				@extend .arrow-next
