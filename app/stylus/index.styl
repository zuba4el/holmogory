.full
	&.min-mobile
		+media(960px)
			padding 56px 0px 30px
		h1
			text-align left
			+media(480px)
				text-align center
				margin 10px
		
.index
	padding-top calc(100vh - 290px)
	&-block
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		background blue
		box-shadow 0 0 100px 00px darkblue inset
		&_description
			width 65%
			padding 60px 100px
			+media(768px)
				padding 20px
			+media(480px)
				width 100%
			h3
				font-family "GothamProMedium"
				color #fff
				text-transform none
				font-size 34px //why?
			p
				font-family "GothamProRegular"
				font-size 16px
			button.btn_more
				background #4b7b9b
				margin 10px
		&_buttons
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			flex-direction column
			justify-content space-around
			padding 10px 0
			+media(480px)
				display none
			&__item
				a
					display -webkit-flex
					display -moz-flex
					display -ms-flex
					display -o-flex
					display flex
					align-items center
					font-size 16px
					p
						font-size 22px
						text-align left
						+media(640px)
							font-size 16px
		svg	
			padding 15px
			background lightblue
			border-radius 5px
			margin-right 10px
			size (77px 77px)
			+media(768px)
				display none
			path
				transition animation
				fill white
			&:hover
				path
					fill active
	&-social
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-wrap wrap
		&_item
			width 25%
			transition animation
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			align-items center
			justify-content center
			+media(480px)
				width 50%
			p
				font-size 14px
				transition animation
				color #ccc
		.twitter
			background #1da1f2 url('../img/twitter.png') no-repeat center center
			background-size 20% 90%
			&:hover
				box-shadow 0 0 0px 3px #1da1f2
				z-index 1
				background-position: 10% center
		.ok
			background #f6882e url('../img/ok.png') no-repeat center center
			background-size 20% 90%
			&:hover
				box-shadow 0 0 0px 3px #f6882e
				z-index 1
				background-position: 10% center
		.vk
			background #507299 url('../img/vk.png') no-repeat center center
			background-size 20% 90%
			&:hover
				box-shadow 0 0 0px 3px #507299
				z-index 1
				background-position: 10% center
		.facebook
			background #3d5a98 url('../img/facebook.png') no-repeat center center
			background-size 20% 90%
			&:hover
				box-shadow 0 0 0px 3px #3d5a98
				z-index 1
				background-position: 10% center
