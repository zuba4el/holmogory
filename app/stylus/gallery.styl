.gallery
	width 60%
	margin 0 auto
	@media (max-width 768px)
		width 90%
	&-current
		width 100%
		margin-bottom 10px
		&--item
			width 100%
	&-list
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content center
		width 100%
		position relative
		@media (max-width 768px)
			display none
		&--item
			width calc(33.33% - 5px)
			margin 0 5px
		.paggination
			position absolute
			width 120%
			top calc(50% - 17px)
			left -10%
			height 0
